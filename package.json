{
  "name": "building-for-vc",
  "private": true,
  "scripts": {
    "format": "prettier --write \"**/*.{mdx,md,json}\"",
    "format:check": "prettier --check \"**/*.{mdx,md,json}\"",
    "dev": "bunx mint dev",
    "check-links": "bunx mint broken-links",
    "validate": "bunx mint validate",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run format && bun run check-links && bun run validate"
  },
  "devDependencies": {
    "mint": "^4.2.284",
    "prettier": "^3.8.0",
    "simple-git-hooks": "^2.13.1"
  }
}
